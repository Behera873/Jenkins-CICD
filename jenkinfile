pipeline {
    agent any

    stages {
        stage('clean workspace') {
            steps {
                deleteDir()
            }
        }
        stage('git clone') {
            steps {
                git branch: 'main', url: 'https://github.com/Behera873/Jenkins-CICD.git'
            }
        }
        stage('init terraform') {
            steps {
                sh 'terraform init'  
            }
        }
        stage('plan terraform') {
            steps {
                sh 'terraform plan'
            }
        }
        stage('apply/destroy terraform') {
            steps {
                sh "terraform ${params.Action} -auto-approve"
            }
        }
    }
}
